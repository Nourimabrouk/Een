# Een Repository - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=your_assistant_id_here
OPENAI_MODEL=gpt-4o-mini

# Chat API Configuration
CHAT_API_ENDPOINT=http://localhost:8000/api/chat
CHAT_BEARER_TOKEN=your_chat_bearer_token_here

# Anthropic API (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_KEY=your_secure_api_key_here
REQUIRE_AUTH=true
API_KEY_REQUIRED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_PER_MINUTE=30
MAX_REQUEST_SIZE=10485760

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://nourimabrouk.github.io
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# =============================================================================
# Database & Storage
# =============================================================================

# Redis Configuration (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=een:session:
REDIS_RATE_LIMIT_PREFIX=een:ratelimit:

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Legacy server settings
HOST_LEGACY=127.0.0.1
PORT_LEGACY=5000

# =============================================================================
# AI Assistant Configuration
# =============================================================================

# Model Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_TOP_P=1.0

# Function Calling
ENABLE_FUNCTION_CALLING=true
ENABLE_CODE_EXECUTION=false  # Security: disabled by default

# Vector Store
VECTOR_STORE_ID=your_vector_store_id_here
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_ASSISTANT=100

# =============================================================================
# Frontend Configuration
# =============================================================================

# API Endpoints
FRONTEND_API_BASE_URL=http://localhost:8000
FRONTEND_WEBSOCKET_URL=ws://localhost:8000/ws

# Features
ENABLE_STREAMING=true
ENABLE_CITATIONS=true
ENABLE_VOICE=false
ENABLE_OFFLINE_FALLBACK=true

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Logging
LOG_FILE_PATH=logs/een-chat.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Metrics
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
PROMETHEUS_PORT=9090

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ERROR_REPORTING=false

# =============================================================================
# Development & Testing
# =============================================================================

# Testing
TEST_DATABASE_URL=sqlite:///test.db
PYTEST_TIMEOUT=30

# Development
HOT_RELOAD=true
AUTO_RELOAD=true
SERVE_STATIC=true

# Mock Responses (for offline development)
ENABLE_MOCK_RESPONSES=true
MOCK_RESPONSE_DELAY_MS=500 