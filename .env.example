# Een Repository Configuration
# ============================
# Copy this file to `.env` and replace the placeholders.

# OpenAI Configuration (REQUIRED for all features)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# Optional model overrides for linting
OPENAI_LINT_MODEL="gpt-4o-mini"
OPENAI_LINT_TOKENS="300"

# AI Agent Configuration
# ======================

# Embedding Configuration
EMBED_MODEL=text-embedding-3-large
CHAT_MODEL=gpt-4o-mini
CHAT_TEMPERATURE=0.2

# Cost Management
HARD_LIMIT_USD=20.0
MAX_CHAT_TOKENS=1000
MAX_TOKENS_PER_REQUEST=2048

# API Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Security (Optional)
CHAT_BEARER_TOKEN=your-secret-bearer-token-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# Embedding Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=128
MAX_FILE_SIZE_MB=4

# Session Management
SESSION_TIMEOUT_HOURS=24
MAX_ACTIVE_SESSIONS=1000

# Deployment (Production)
RENDER_DEPLOY_HOOK_URL=https://api.render.com/deploy/your-hook-here
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_TOKEN=your-railway-token

# Monitoring (Optional)
OPENAI_BUDGET_LIMIT=20.0
LOG_LEVEL=INFO