# Een Consciousness API Environment Configuration
# Copy this file to .env and update the values

# Security
EEN_SECRET_KEY=your-super-secret-key-here-change-this-in-production
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@een.consciousness.math

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Admin Access Control
ADMIN_IP_WHITELIST=127.0.0.1,::1

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost/een_db
# REDIS_URL=redis://localhost:6379

# External Services (for future use)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/een-api.log

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# SSL Configuration (for production)
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090 